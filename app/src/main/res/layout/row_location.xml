<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
  <ImageView
      android:id="@+id/icon"
      tools:src="@mipmap/ic_launcher"
      android:layout_width="32dp"
      android:layout_height="32dp"
      android:layout_marginTop="@dimen/spacing_not_so_major"
      android:layout_marginLeft="@dimen/spacing_minor"
      android:contentDescription="@string/app_name"
      />
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      >

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="KFC"
        style="@style/nameTextStyle"
        android:fontFamily="sans-serif-medium"
        />
    <TextView
        android:id="@+id/vicinity"
        tools:text="KFC, Bukit Batok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/addressTextStyle"
        android:fontFamily="sans-serif-light"
        />
    <TextView
        android:text="@string/opening"
        android:id="@+id/opening"
        tools:text="Opening  Yes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/addressTextStyle"
        android:paddingBottom="@dimen/spacing_minor"
        android:fontFamily="sans-serif-light"
        />

  </LinearLayout>


</LinearLayout>