<resources>

  <style name="myAppTheme"
      parent="AppTheme.Base"/>

  <!-- the theme applied to the application or activity -->
  <style name="AppTheme.Base"
      parent="Theme.AppCompat.Light.DarkActionBar">
    <item name="colorPrimary">@color/primary</item>
    <item name="colorPrimaryDark">@color/primary_dark</item>
    <item name="colorAccent">@color/primary_light</item>
    <item name="android:windowNoTitle">true</item>
    <item name="windowActionBar">false</item>
  </style>

  <style name="nameTextStyle"
      parent="Base.TextAppearance.AppCompat.Widget.ActionBar.Title">
    <item name="android:textSize">@dimen/text_size_medium</item>
    <item name="android:textColor">@color/primary_text</item>
    <item name="android:gravity">center_vertical</item>
    <item name="android:padding">@dimen/spacing_minor</item>
    <item name="android:layout_gravity">center_vertical</item>
  </style>

  <style name="addressTextStyle"
      parent="Base.TextAppearance.AppCompat.Widget.ActionBar.Title">
    <item name="android:textSize">@dimen/text_size_small</item>
    <item name="android:textColor">@color/secondary_text</item>
    <item name="android:gravity">center_vertical</item>
    <item name="android:paddingLeft">@dimen/spacing_minor</item>
    <item name="android:paddingBottom">@dimen/spacing_minor</item>
    <item name="android:paddingRight">@dimen/spacing_minor</item>
    <item name="android:layout_gravity">center_vertical</item>
  </style>

</resources>
